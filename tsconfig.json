{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6",
      "dom"
    ],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "baseUrl": "./",
    "paths": {
      "src/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*",
    "src/config/environment.ts",
    "src/config/ormconfig.ts"
  ],
  "exclude": [
    "node_modules",
    "src/__tests__/**/*",
    "**/*.test.ts"
  ]
}